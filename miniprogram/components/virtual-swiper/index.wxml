<!--components/virtual-swiper/index.wxml-->
<swiper 
  circular
  style="height:{{height}}px"
  duration="{{duration}}" 
  current="{{virtualSwiperCurrent}}"
  bindchange="swiperChange"
>
  <swiper-item wx:for="{{virtualSwiperList}}" wx:key="sss">
    <item-view
      onlyRead="{{onlyRead}}"
      info="{{item}}"
      index="{{item.index}}"
      height="{{height}}"
      bind:selectOption="handleOptionSelect"
      bind:pickerOptionConfirm="handlePickerOptionSelect"
      bind:recordClick="handleRecordClick"
      bind:submitAnswer="handleAnswerSubmit"
    ></item-view>
  </swiper-item>
</swiper>
