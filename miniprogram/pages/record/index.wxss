/* pages/history/index.wxss */
.record-container {
  height: 100%;
  width: 100%;
  position: fixed;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.record-cell {
  box-sizing: border-box;
  width: 90%;
  height: 200rpx;
  margin: 0 auto 32rpx;
  padding: 14rpx 32rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
}
.left {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}
.name {
  font-size: 16px;
}
.score {
  font-size: 16px;
  color: #2f80ed;
  /* color: rgba(255, 255, 255, 0.295); */
}
.time {
  font-size: 14px;
  color: grey;
}

.finish {
  font-size: 16px;
}
.not-finish {
  color: #2f80ed!important;
}
.loading {
  position: relative;
  bottom: 5rpx;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* text-align: center; */
  color: #2f80ed;
}
