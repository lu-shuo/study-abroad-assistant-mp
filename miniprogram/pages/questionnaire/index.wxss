/* pages/questionnaire/index.wxss */
.container {
  height: 98vh;
  position: relative;
}
.questionnaire-name {
  font-size: 15px;
}
.question-progress {
  display: flex;
  flex-direction: row-reverse;
  font-size: 15px;
}
.question-progress>.current {
  color: #2f80ed;
  font-size: 25px;
  margin-right: 5px;
}
.question-progress>.total {
  margin-left: 5px;
}

.van-loading {
  position: absolute!important;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.not-finish-dialog {
  font-size: 40px;
}
.van-dialog__message-text {
  font-size: 16px!important;
}
.van-dialog__footer .van-button__text {
  color: #2f80ed!important;
}