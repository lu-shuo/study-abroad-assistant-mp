<!--pages/questionnaire/components/item/index.wxml-->
<scroll-view style="height:{{height}}px" scroll-y >
  <view class="question-wrapper" wx:if="{{index !== null}}">
    <van-tag plain type="primary">{{question.qType === 0 ? '单选': '多选'}}</van-tag>
    <view class="content">
      <view class="title">{{question.title}}</view>
      <view class="single-option" wx:if="{{question.qType === 0}}">
        <van-radio-group
          value="{{ select }}"
          bind:change="onOptionSelect"
        >
          <van-radio
            wx:for="{{question.options}}"
            wx:key="index"
            wx:for-item="option"
            name="{{option.title}}"
            custom-class="option"
          >
            {{option.title}}. {{option.content}}
          </van-radio>
        </van-radio-group>
      </view>
    </view>
  </view>
</scroll-view>
