/* pages/questionnaire/components/item/index.wxss */
.question-wrapper {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 40rpx;
}
.content {
  margin-top: 20rpx;
}
.title {
  line-height: 200%;
  font-size: 20px;
}
.single-option {
  margin-top: 20rpx;
  padding: 0 20rpx;
  font-size: 20px;
}
/* .van-radio__icon {
  font-size: 30px!important;
} */
.option {
  margin: 50rpx 0;
}
.radio-label {
  margin-left: 10rpx;
}
.record-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
}
.record-box {
  width: 100%;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.record{
  width: 80rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 42rpx;
  background-color:#cfd4d8;
  color: #ffffff;
  margin: 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.confirm-btn {
  position: absolute!important;
  z-index: 1;
  bottom: 20rpx;
  left: 50%;
  transform: translate(-50%,-50%); /*自己的50% */
  /* background: linear-gradient(to bottom, #56ccf2, #2f80ed)!important; */
  background-color: #2f80ed!important;
  color: white!important;
  font-size: 13pt!important;
  width: 90vw!important;
}
.selected {
  background-color:#2f80ed!important;
}