/* pages/questionnaire/components/item/index.wxss */
.question-wrapper {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 40rpx;
}
.tag-wrapper {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.tag {
  margin-right: 20rpx;
}
/* .sort {
  width: ;
} */
.content {
  margin-top: 20rpx;
}
.disabled {
  pointer-events: none;
}
.title {
  line-height: 200%;
  font-size: 20px;
}
.multi-tip {
  font-size: 15px;
  color: grey;
}
.single-option {
  margin-top: 20rpx;
  /* padding: 0 20rpx; */
  font-size: 20px;
}
.multi-option {
  margin: 20rpx 0;
  /* padding: 0 20rpx; */
  font-size: 20px;
  position: relative;
}
/* .van-radio__icon {
  font-size: 30px!important;
} */
.radio-label {
  margin-left: 10rpx;
  line-height: 30px!important;
}
.option {
  font-size: 20px;
  line-height: 30px;
  color: #323233;
  margin: 50rpx 0;
}
.picker-content {
  /* padding-left: 10px; */
  position: relative;
}
.picker-content-num {
  display: inline-block;
  width: 40px;
  border-bottom: 1px solid black;
  text-align: center;
  color: #2f80ed;
}
.picker-wrapper {
  height: 100%!important;
}
.record-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
}
.record-box {
  width: 100%;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.record{
  width: 80rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 42rpx;
  background-color:#cfd4d8;
  color: #ffffff;
  margin: 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.confirm-btn {
  position: absolute!important;
  z-index: 1;
  bottom: -180rpx;
  left: 50%;
  transform: translate(-50%,-50%); /*自己的50% */
  /* background: linear-gradient(to bottom, #56ccf2, #2f80ed)!important; */
  background-color: #2f80ed!important;
  color: white!important;
  font-size: 13pt!important;
  width: 90vw!important;
}
.submit-btn {
  position: absolute!important;
  z-index: 1;
  bottom: 20rpx;
  left: 50%;
  transform: translate(-50%,-50%); /*自己的50% */
  /* background: linear-gradient(to bottom, #56ccf2, #2f80ed)!important; */
  background-color: #2f80ed!important;
  color: white!important;
  font-size: 13pt!important;
  width: 90vw!important;
}
.selected {
  background-color:#2f80ed!important;
}