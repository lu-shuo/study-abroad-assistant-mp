<!--pages/universities/index.wxml-->
<view class="university-container">
  <scroll-view scroll-y="true" bindscrolltolower="searchScrollLower">
    <view class="university-cell" wx:for="{{dataList}}" wx:key="_id">
      <view class="left">
        <view class="name">{{item.name}}</view>
        <view class="english-name">Massachusetts Institute of Technology (MIT)</view>
        <view class="qs">qs排名： 1</view>
      </view>
      <view class="right">
        <image
          src="cloud://cloud1-7gd3wdqv58b87401.636c-cloud1-7gd3wdqv58b87401-1307759619/university_pics/麻省理工学院.jpg"
          class="university-icon"
        ></image>
      </view>
    </view>
    <view class="loading" hidden="{{!loadMore}}">正在载入更多...</view>
    <view class="loading" hidden="{{!loadAll}}">已加载全部</view>
  </scroll-view>
</view>
