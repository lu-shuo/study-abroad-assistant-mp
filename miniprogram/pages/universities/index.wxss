/* pages/universities/index.wxss */
.university-cell {
  box-sizing: border-box;
  width: 100%;
  height: 200rpx;
  margin: 0 auto 32rpx;
  padding: 14rpx 32rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
}
.left {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.name {
  font-size: 16px;
}
.english-name {
  font-size: 16px;
  color: gray;
  /* color: rgba(255, 255, 255, 0.295); */
}
.qs {
  font-size: 14px;
  color: #2f80ed;
}
.university-icon {
  width: 150rpx;
  height: 150rpx;
}
.loading {
  position: relative;
  bottom: 5rpx;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* text-align: center; */
  color: #2f80ed;
}