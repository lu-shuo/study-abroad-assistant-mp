/* pages/answer/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.collapse {
  margin-bottom: 30rpx;
}

.collapse-item .van-cell{
  padding: 30rpx!important;
}

.collapse-item .van-cell__title{
  /* font-weight: 400!important; */
  font-size: 16px!important;
}

.block {
  margin-bottom: 30rpx;
  border-radius: 5px;
  background-color: white;
  width: 93%;
}
.block-content {
  font-weight: 400;
  font-size: 35rpx;
  padding: 30rpx 30rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 16px;
}

.column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.score {
  color: #2f80ed;
}

.title {
  width: 100%;
}

.chart-wrapper {
  width: 100%;
  height: 40vh;
  /* background-color: #2f80ed; */
}
ec-canvas {
  width: 100%;
  height: 100%;
}